{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "format": "eslint \"resources/**/*.{jsx,js}\" --fix"
    },
    "devDependencies": {
        "@babel/preset-react": "^7.13.13",
        "@headlessui/react": "^1.2.0",
        "@inertiajs/inertia": "^0.9.0",
        "@inertiajs/inertia-react": "^0.6.0",
        "@inertiajs/progress": "^0.2.4",
        "@svgr/webpack": "^5.5.0",
        "@tailwindcss/forms": "^0.3.2",
        "autoprefixer": "^10.2.4",
        "axios": "^0.21",
        "browser-sync": "^2.27.5",
        "browser-sync-webpack-plugin": "^2.3.0",
        "eslint": "7.28.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.2.13",
        "postcss-import": "^14.0.1",
        "prettier": "2.5.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "resolve-url-loader": "^4.0.0",
        "sass": "^1.42.1",
        "sass-loader": "^12.1.0",
        "tailwindcss": "^2.1.2"
    },
    "dependencies": {
        "@farbenmeer/react-spring-slider": "^1.5.2",
        "@react-spring/web": "^9.2.6",
        "@reduxjs/toolkit": "^1.7.1",
        "animate.css": "^4.1.1",
        "bootstrap": "5.1.3",
        "bootstrap-icons": "^1.7.2",
        "jquery": "^3.6.0",
        "lodash-es": "^4.17.21",
        "lodash.clamp": "^4.0.3",
        "mauerwerk": "^2.0.2",
        "normalize.css": "^8.0.1",
        "react-bootstrap": "^2.0.4",
        "react-color": "^2.19.3",
        "react-redux": "^7.2.6",
        "react-router-dom": "^5.2.0",
        "react-slick": "^0.28.1",
        "react-spring": "^9.3.2",
        "react-use": "^17.3.2",
        "react-use-gesture": "^9.1.3",
        "react-use-measure": "^2.0.4",
        "redux": "^4.1.2",
        "stylesheet": "^0.9.1"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "bracketSpacing": false,
        "braceStyle": "1tbs"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended",
            "plugin:prettier/recommended"
        ],
        "plugins": [
            "react",
            "prettier"
        ],
        "rules": {
            "prettier/prettier": "warn",
            "react/jsx-uses-react": "error",
            "react/jsx-uses-vars": "error",
            "no-unused-vars": "warn",
            "react/prop-types": "off"
        },
        "parserOptions": {
            "sourceType": "module",
            "ecmaVersion": 2020,
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "ignorePatterns": [
            "node_modules"
        ],
        "globals": {
            "route": true
        },
        "env": {
            "browser": true,
            "node": true,
            "jasmine": true,
            "jquery": true
        }
    }
}
